{% extends 'base.html.twig' %}

{% block body %}
    <h1>Novedades list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Texto</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for novedade in novedades %}
            <tr>
                <td><a href="{{ path('novedades_show', { 'id': novedade.id }) }}">{{ novedade.id }}</a></td>
                <td>{{ novedade.Texto }}</td>
                <td>{{ novedade.estado }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('novedades_show', { 'id': novedade.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('novedades_edit', { 'id': novedade.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('novedades_new') }}">Create a new novedade</a>
        </li>
    </ul>
{% endblock %}
